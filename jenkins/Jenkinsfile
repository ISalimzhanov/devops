pipeline {
  agent none

  stages {  // Define the individual processes, or stages, of your CI pipeline
    stage("Docker") {
        agent {
            dockerfile{
                label 'slave-label'
                dir 'Dockerfile'
            }
        }
    }
    stage('Linting') { // Run pylint against your code
      steps {
        script {
          sh """
          make lint
          """
        }
      }
    }
    stage('Unit Testing') { // Perform unit testing
      steps {
        script {
          sh """
          make test
          """
        }
      }
    }
  }
}
